<config>
    <modules>
        <Codesbug_Colorswatch>
            <version>0.1.0</version>
        </Codesbug_Colorswatch>
    </modules>
    <frontend>
        <routers>
            <colorswatch>
                <use>standard</use>
                <args>
                    <module>Codesbug_Colorswatch</module>
                    <frontName>colorswatch</frontName>
                </args>
            </colorswatch>
        </routers>
        <layout>
            <updates>
                <colorswatch>
                    <file>colorswatch.xml</file>
                </colorswatch>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
            <colorswatch>
                <use>admin</use>
                <args>
                    <module>Codesbug_Colorswatch</module>
                    <frontName>colorswatch</frontName>
                </args>
            </colorswatch>
        </routers>
    </admin>
    <adminhtml>
        
        <acl>
            <resources>
                <all>
                    <title>Allow Everything</title>
                </all>
                <admin>
                    <children>
                        <Codesbug_Colorswatch>
                            <title>Colorswatch Module</title>
                            <sort_order>10</sort_order>
                        </Codesbug_Colorswatch>
                    </children>
                </admin>
            </resources>
        </acl>
        <layout>
            <updates>
                <colorswatch>
                    <file>colorswatch.xml</file>
                </colorswatch>
            </updates>
        </layout>
    </adminhtml>   
    <adminhtml>
        <layout>
            <updates>
                <Codesbug_colorwatch>
                    <file>colorswatch.xml</file>
                </Codesbug_colorwatch>                
            </updates>
        </layout>
    </adminhtml>
    <global>
        <models>
            <colorswatch>
                <class>Codesbug_Colorswatch_Model</class>
                <resourceModel>colorswatch_mysql4</resourceModel>
            </colorswatch>
            <colorswatch_mysql4>
                <class>Codesbug_Colorswatch_Model_Mysql4</class>
                <entities>
                    <colorswatch>
                        <table>colorswatch</table>
                    </colorswatch>
                </entities>
            </colorswatch_mysql4>
        </models>
        <resources>
            <colorswatch_setup>
                <setup>
                    <module>Codesbug_Colorswatch</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </colorswatch_setup>
            <colorswatch_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </colorswatch_write>
            <colorswatch_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </colorswatch_read>
        </resources>
        <blocks>
            <colorswatch>
                <class>Codesbug_Colorswatch_Block</class>
            </colorswatch>
	  
        </blocks>
        <helpers>
            <colorswatch>
                <class>Codesbug_Colorswatch_Helper</class>
            </colorswatch>
        </helpers>
        <adminhtml>
            <layout>
                <updates>
                    <adminhtml>
                        <file>colorswatch.xml</file>
                    </adminhtml>  
                </updates>
            </layout>
        </adminhtml>
        <blocks>
            <adminhtml>
                <rewrite>
                    <catalog_product_attribute_edit_tab_options>Codesbug_Colorswatch_Block_Adminhtml_Imageupload</catalog_product_attribute_edit_tab_options>
                </rewrite>
                <rewrite>
                    <catalog_product_attribute_edit_form>Codesbug_Colorswatch_Block_Adminhtml_Form</catalog_product_attribute_edit_form>
                </rewrite>
            </adminhtml>
            
        </blocks>
        <events>
            <catalog_entity_attribute_save_after>
                <observers>
                    <codesbug_colorswatch>
                        <class>Codesbug_Colorswatch_Model_Observer</class>
                        <method>saveImages</method>
                    </codesbug_colorswatch>
                </observers>
            </catalog_entity_attribute_save_after>
        </events>
        <helpers>
            <catalog>
                <rewrite>
                    <product_configuration>Codesbug_Colorswatch_Helper_Data</product_configuration>
                </rewrite> 
            </catalog>
        </helpers>
        <messages>
            <error>
                <invalid_file>Invalid Image Format: Only jpg, png and gif Supported!</invalid_file>
            </error>
        </messages>
    </global>
</config>
